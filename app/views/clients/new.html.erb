
<div class="container">
<%= form_for(@client) do |f| %>
    <div class="form-group">
        <div class="input-group">
            <%= f.text_field :name, placeholder: "Names" %>
        </div>
    </div>
    <div class="form-group">
        <div class="input-group">
            <%= f.text_field :phone_no, placeholder: "Phone Number" %>
        </div>
    </div>
    <div class='form-group'>
        <div class="input-group">
            <%= f.text_field :due_date, placeholder: "Pick Due Date" ,class: "date"%>
        </div>
    </div>
    <div class="form-group">
        <div class="input-group">
            <%= f.text_field :installment_amount, placeholder: "Enter Installment Amount" %>
        </div>
    </div>
    <div class="form-group">
        <div class="input-group">
            
            <%= f.select :loan_duration, [5,7,10], {:prompt => "Pick Loan Duration"}%> 
        </div>
    </div>
    
    <%= f.submit "Save"%>
    
<% end %>

</div>

