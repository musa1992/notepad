
<div class="container">
     
<div class="client-form container">
<h3>Create new client</h3>
<%= render 'shared/error_messages'%>
<%= form_for(@client) do |f| %>
<div class="form-client-add-page">
    <div class="right-section"> 
        <div class="add-client-form">
            <div>
                <%= f.label :name, "Client Name", class: "client-label"%>
                <%= f.text_field :name, class: "client-input" %>
            </div>
        </div>
        <div class="add-client-form">
            <div>
                <%= f.label :phone_no, "Phone Number", class: "client-label"%>
                <%= f.text_field :phone_no, class: "client-input"%>
            </div>
        </div>

        <div class="add-client-form">
            <div>
                <%# <%= f.label :phone_no, "Loan Amount", class: "client-label"%>  
                <%# <%= f.text_field :phone_no, class: "client-input"%>
            </div>
        </div>
    </div> 
    <div class="left-section">
        <div class="add-client-form">
            <div>
                <%= f.label :due_date, "Due Date", class: "client-label"%>
                <i class="fa fa-calendar"></i>
                <%= f.text_field :due_date,class: "date client-input"%>
                
            </div>
        </div>
        <div class="add-client-form">
            <div>
                <%= f.label :installment_amount, "Instalment Amount", class: "client-label"%>
                <%= f.text_field :installment_amount, class: "client-input" %>
            </div>
        </div>
        <div class="add-client-form">
            <div>
                <%= f.label :loan_duration, "Loan Duration", class: "client-label"%>
                <%= f.select :loan_duration, [5,7,10] %> 
            </div>
        </div>
    </div>
</div>
    <%= f.submit "Save", class: "client-btn btn" %> 
<% end %>
</div>
</div>

